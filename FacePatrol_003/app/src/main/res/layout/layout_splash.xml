<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:gravity="center">

	<ImageView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:src="@drawable/denel_logo_1"
		android:id="@+id/layoutsplashImageView1"
		android:padding="20dp"/>

	<TextView
		android:layout_height="wrap_content"
		android:text="Face Patrol"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content"
		android:layout_below="@id/layoutsplashImageView1"
		android:textSize="40sp"
		android:textStyle="bold"
		android:id="@+id/layoutsplashTextView1"
		android:textColor="#005CA9"
		android:layout_centerInParent="true"
		android:shadowColor="#999AB3"
		android:shadowRadius="2"
		android:shadowDx="2.0"
		android:shadowDy="2"/>

</RelativeLayout>

